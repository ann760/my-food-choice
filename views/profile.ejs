                    <% } %>  
                <% }%>  
                </div>
                
                <div class="container center-align">
                    <ul class="pagination">
                        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
                        <li class="active"><a href="#!">1</a></li>
                        <li class="waves-effect"><a href="/favorite">2</a></li>
                        <li class="waves-effect"><a href="/favorite"><i class="material-icons">chevron_right</i></a></li>
                      </ul>
                </div> 
        
