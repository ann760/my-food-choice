<!DOCTYPE html>
<html lang="en-US">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <div class="container">
        <div class="row">
          <h1>Change Password</h1>
          
          <form class="change-pw-form col s12" action="/" method="GET">
            <!-- hidden email (username) field for accessibility -->
                <input id="current-email" type="email" autocomplete="email" class="validate hide" name = "<%= user_id %>" data-loggedin = "<%= loggedIn%>" />
              <div class="row">
                 <div class="input-field col s12 hoverable">
                   <i class="material-icons prefix">security</i>
                   <input id="current-password" type="password" autocomplete="current-password" class="validate" name = "<%= user_id %>" data-loggedIn = "<%= loggedIn%>"/>
                   <label for="current-password">Current Password</label>
                 </div>
              </div>
              <div class="row">
                  <div class="input-field col s12 m6 hoverable">
                      <i class="material-icons prefix">security</i>
                      <input id="new-password" type="password" autocomplete="new-password" class="validate" />
                      <label for="new-password">New Password</label>
                  </div>
                  <div class="input-field col s12 m6 hoverable">
                      <i class="material-icons prefix">security</i>
                      <input id="confirm-new-password" type="password" autocomplete="confirm-new-password" class="validate" />
                      <label for="confirm-new-password">Confirm New Password</label>
                  </div>
              </div>
              <div class="col s5 m4 l3">
                  <button id="changepw-btn" class="btn btn-large waves-effect waves-light <%= color %> hoverable"  type="submit" value="accept">
                  Submit <i class="material-icons right">send</i>
                 </button>
              </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('./partials/footer.ejs') %>
    <script src="./js/logout.js"></script>
    <script src="./js/changePw.js"> </script>
  </body>
</html>
